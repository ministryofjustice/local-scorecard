{
  "name": "local-scorecard",
  "version": "1.0.0",
  "description": "Local scorecard displaying court statistics",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npm run development",
    "development": "npx mix",
    "watch": "npx mix watch",
    "watch-poll": "npx mix watch -- --watch-options-poll=1000",
    "hot": "npx mix watch --hot",
    "prod": "npm run production",
    "production": "npx mix --production && rm -rf node_modules"
  },
