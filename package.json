  "devDependencies": {
    "laravel-mix": "^6.0.39",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.49.7",
    "sass-loader": "^12.4.0"
  },
  "dependencies": {
    "govuk-frontend": "^4.0.0"
  }
}
